<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="app.hoocchi.perfectdemo.transition_demo.ShareElementFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/blue_circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/circle_ball_24dp"
            android:transitionName="@string/share_element_icon" />

        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fragment 1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="蓝色的球是MainActivity与Fragment1之间的共享元素。"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/overlap_false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:inputType="textCapWords"
            android:text="Next Fragment (Overlap Transition = false)" />

        <Button
            android:id="@+id/overlap_true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:inputType="textCapWords"
            android:text="Next Fragment (Overlap Transition = true)" />

    </LinearLayout>

</ScrollView>
